@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = $"{employee.PhotoPath ?? "picture.png"}";

        <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
            <div class="card-header">
                <h4>@employee.ToString()</h4>
            </div>
            <img class="card-img-top imageThumbnail" src="~/images/@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning m-1">View</a>
                <a href="@Url.Action("Edit","Home", new { id = employee.Id })" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
